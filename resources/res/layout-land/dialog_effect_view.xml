<?xml version="1.0" encoding="utf-8"?>
<com.xiaopeng.xuiservice.xapp.mode.effect.EffectPanel xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:theme="@style/XAppTheme" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.xiaopeng.xui.widget.XLinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="@dimen/effect_severberation_height" android:layout_weight="1">
        <com.xiaopeng.xui.widget.XTextView android:textSize="@dimen/x_font_body_03_size" android:textColor="@color/x_theme_text_03" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/dialog_effect_reverberation_title"/>
        <com.xiaopeng.xui.widget.slider.XSlider android:id="@+id/slide_reverberation" android:layout_width="@dimen/effect_severberation_slider_width" android:layout_height="wrap_content" style="@style/XSlider"/>
