        </com.xiaopeng.xui.widget.XLinearLayout>
    </com.xiaopeng.xui.widget.XLinearLayout>
    <com.xiaopeng.xui.widget.XLinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="@dimen/effect_sets_height" android:layout_weight="1">
        <com.xiaopeng.xui.widget.XTextView android:textSize="@dimen/x_font_body_03_size" android:textColor="@color/x_theme_text_03" android:id="@+id/effect_sets_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/dialog_effect_sets_title"/>
        <androidx.recyclerview.widget.RecyclerView android:id="@+id/recyclerView_effect" android:layout_width="match_parent" android:layout_height="match_parent" app:layoutManager="androidx.recyclerview.widget.GridLayoutManager" app:spanCount="3"/>
    </com.xiaopeng.xui.widget.XLinearLayout>
</com.xiaopeng.xuiservice.xapp.mode.effect.EffectPanel>
